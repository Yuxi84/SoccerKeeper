            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/free_kicks"
            android:layout_weight=".6"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:layout_weight=".5"/>
