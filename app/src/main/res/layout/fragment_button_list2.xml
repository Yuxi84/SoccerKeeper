<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.example.yzhan14.soccerkeeper.ButtonList2">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight=".4"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/playerradiogroup">
                <RadioButton
                    style = "@style/PlayerButton"
                    android:text="@string/player_1"
                    android:id="@+id/player1"/>
                <RadioButton
                    style = "@style/PlayerButton"
                    android:text="@string/player_2"
                    android:id="@+id/player2"/>
                <RadioButton
                    style = "@style/PlayerButton"
                    android:text="@string/player_3"
                    android:id="@+id/player3"/>
                <RadioButton
                    style = "@style/PlayerButton"
                    android:text="@string/player_4"
                    android:id="@+id/player4"/>
                <RadioButton
                    style = "@style/PlayerButton"
                    android:text="@string/player_5"
                    android:id="@+id/player5"/>
                <RadioButton
                    style = "@style/PlayerButton"
                    android:text="@string/player_6"
                    android:id="@+id/player6"/>
                <RadioButton
                    style = "@style/PlayerButton"
                    android:text="@string/player_7"
                    android:id="@+id/player7"/>
                <RadioButton
                    style = "@style/PlayerButton"
                    android:text="@string/player_8"
                    android:id="@+id/player8"/>
                <RadioButton
                    style = "@style/PlayerButton"
                    android:text="@string/player_9"
                    android:id="@+id/player9"/>
                <RadioButton
                    style = "@style/PlayerButton"
                    android:text="@string/player_10"
                    android:id="@+id/player10"/>
                <RadioButton
                    style = "@style/PlayerButton"
                    android:text="@string/player_11"
                    android:id="@+id/player11"/>
            </RadioGroup>


        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:background="@drawable/textlines">
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RadioButton
                android:id="@+id/shot"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textAlignment="center"
                android:text="@string/shot"/>
            <RadioButton
                android:id="@+id/shotontarget"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textAlignment="center"
                android:text="@string/shot_on_target"/>
        </RadioGroup>


    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.1"
        android:id="@+id/nextbutton"
        android:text="@string/next"/>


</LinearLayout>
